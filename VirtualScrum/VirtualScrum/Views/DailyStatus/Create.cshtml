            @Html.LabelFor(model => model.Item1.DidYesterday, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item1.DidYesterday)
                @Html.ValidationMessageFor(model => model.Item1.DidYesterday)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item1.DoToday, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item1.DoToday)
                @Html.ValidationMessageFor(model => model.Item1.DoToday)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item1.BlockingIssue, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item1.BlockingIssue)
                @Html.ValidationMessageFor(model => model.Item1.BlockingIssue)
            </div>
        </div>

