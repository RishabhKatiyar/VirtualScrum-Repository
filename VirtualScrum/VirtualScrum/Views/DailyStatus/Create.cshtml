@model Tuple<VirtualScrum.Models.DailyStatus, VirtualScrum.Models.DailyStatusInfo>

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@{
    IList<SelectListItem> ScrumTeamInfoList = Model.Item2.ScrumTeamInfoList;
}


